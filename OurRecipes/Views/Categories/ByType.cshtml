@using OurRecipes.Models.Recipes;
@model List<CollectionCardViewModel>;
@{
    ViewData["Title"] = "Categories by type";
}

<section id="recipe-cards" class="cards section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <p>Categories</p>
            <h2>Categories by type</h2>
        </div>
        <div class="row gy-4">
            @foreach (var element in Model)
            {
                <a asp-controller="Recipes" asp-action="ByCategory" asp-route-categoryName="@element.Name" class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                    <div class="card-member">
                        <div class="member-img">
                            <img src="~/img/collections-cover.jpg" class="card-img" alt="@element.Name-img">
                        </div>
                        <div class="member-info">
                            <h4>@element.Name</h4>
                            <p>@element.RecipeCount recipes</p>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</section>