@using OurRecipes.Models.Comments;
@model List<CommentViewModel>;
<section class="section-bg" id="recipe-comments">
    <div class="container recipe-container-container" data-aos="fade-up">
        <div class="section-header">
            <p>Comments</p>
        </div>
        <a href="#add-comment">Add Comment</a>
        @if (Model.Count > 0)
        {
            @foreach (var comment in Model)
            {
                <strong>@comment.UserName</strong>
                <div asp-for="Content" id="comment" rows="4" placeholder="Comment..."></div>
                <a asp-action="Replies">Reply</a>
            }
        }
        else
        {
            <div>Be the first one to add a comment!</div>
        }
            
    </div>
</section>


