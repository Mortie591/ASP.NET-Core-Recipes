@using OurRecipes.Models.Comments;
@using OurRecipes.Models.Recipes;
@model ReplyInputModel;
@{
    var routeData = new Dictionary<string, string>
    {
        {"CommentId",Model.CommentId },
        {"UserId",Model.UserId},
        {"ReplyToUserName",Model.ReplyToUserName}
    };
}

<div class="container" style="display:none" id="add-reply" data-aos="fade-up">
    <div class="row gy-4">
        <form method="post" role="form" class="form-group" data-aos="fade-up" data-aos-delay="100">
            <div class="form-group mt-3 mb-3">
                <textarea asp-for="Content" class="form-control" id="reply" rows="4" placeholder="Replying to @Model.ReplyToUserName"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-start">
                <button type="submit" asp-controller="Comments" asp-action="_AddReply" asp-all-route-data=routeData class="m-2 btn btn-md btn-primary">Submit</button>
                <button type="button" class="m-2 btn btn-md btn-secondary" onclick="cancel()">Cancel</button>
            </div>
        </form>
    </div>
</div>

