@using OurRecipes.Models.Comments;
@model List<CommentViewModel>;
<section class="section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <p>Comments</p>
        </div>
        @if (Model.Count > 0)
        {

            @foreach (var comment in Model)
            {
                <strong>@comment.UserName</strong>
                <div asp-for="Content" id="comment" rows="4" placeholder="Comment..."></div>
                <a asp-action="Replies">Reply</a>
            }
        }
        else
        {
            <span>Be the first one to add a comment!</span>
            <a asp-controller="Comments" asp-action="AddComment"></a>
        }
    </div>
</section>
