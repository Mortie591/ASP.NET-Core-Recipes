@using OurRecipes.Models.Recipes;
@model List<RecipeCardViewModel>;
@{
    ViewData["Title"] = "My recipes";
}

<section id="recipe-cards" class="cards section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <p><span>My</span> Recipes</p>
            <h2>My recipes</h2>
        </div>
        <div class="row gy-4">
            @foreach (var element in Model)
            {
                
                <div  class="col-lg-4 col-md-6 d-flex align-items-stretch" >
                    <div class="card-member cover-img col-lg-6 col-md-11">
                        <a asp-controller="Recipes" asp-action="Details" asp-route-id="@element.Id" class="member-img" data-aos="fade-up" data-aos-delay="100">
                            @if (String.IsNullOrEmpty(element.ImageUrl))
                            {
                                <img class="card-img" src="~/img/chicken-recipes-card.jpg" />
                            }
                            else
                            {
                                <img class="card-img" src="@element.ImageUrl" />
                            }
                        </a>
                        <div class="member-info">
                            <h4>@element.Title</h4>
                            <p>@element.Rating likes</p>
                        </div>
                        <div class="d-flex justify-content-around p-2">
                            <a asp-controller="Recipes" asp-action="Edit" asp-route-id="@element.Id" class="btn btn-md btn-warning" data-aos="fade-up" data-aos-delay="100">Edit</a>
                            <a asp-controller="Recipes" asp-action="Delete" asp-route-id="@element.Id" class="btn btn-md btn-secondary" data-aos="fade-up" data-aos-delay="100">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
