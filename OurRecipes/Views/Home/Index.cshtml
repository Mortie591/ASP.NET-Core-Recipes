@using OurRecipes.Models.Recipes;
@model List<RecipeCardViewModel>;
@{
    ViewData["Title"] = "Home Page";
}
    
   <section id="recipe-cards" class="cards section-bg">
       <div class="container" data-aos="fade-up">
           <div class="section-header">
               <p>Our <span>Latest</span> Additions</p>
               <h2>@Model.Count recipes</h2>
           </div>
           <div class="row gy-4">
               @foreach (var element in Model)
               {
                   <a asp-controller="Recipes" asp-action="Details" asp-route-id="@element.Id" class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                       <div class="card-member">
                           <div class="member-img">
                            @if (String.IsNullOrEmpty(element.ImageUrl))
                            {
                                <img src="https://upload.wikimedia.org/wikipedia/commons/6/6d/Good_Food_Display_-_NCI_Visuals_Online.jpg" class="img-fluid" alt="@element.Title-img">
                            }
                            else
                            {
                                <img class="cover-img col-lg-6 col-md-11" class="img-fluid" src="@element.ImageUrl" />
                            }
                                
                           </div>
                           <div class="member-info">
                                <h4>@element.Title</h4>
                                <p>@element.Rating likes</p>
                           </div>
                       </div>
                   </a>
               }
           </div>
       </div>
   </section>